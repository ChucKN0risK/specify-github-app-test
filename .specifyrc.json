{
  "repository": "@specifyapp/Seeds",
  "rules": [
    {
      "name": "Design Tokens",
      "path": "assets/style/theme.js",
      "filter": {
        "types": ["color", "textStyle", "measurement"]
      },
      "parsers": [
        {
          "name": "to-jss",
          "options": {
            "formatName": "camelCase",
            "formatTokens": {
              "colorFormat": "hsl",
              "textStyleFormat": "classObject",
              "fontSizeUnit": "px"
            },
            "formatConfig": {
              "jssObjectName": "theme",
              "exportDefault": false,
              "tabWidth": 4,
              "singleQuote": true
            }
          }
        }
      ]
    },
    {
      "name": "Design Tokens / Icons",
      "path": "assets/icons",
      "filter": {
        "types": ["vector"]
      },
      "parsers": [
        {
          "name": "svgo",
          "options": {
            "svgo": {
              "plugins": [
                {
                  "removeDimensions": true
                },
                {
                  "removeAttrs": {
                    "attrs": "*:(fill|stroke)"
                  }
                },
                {
                  "addAttributesToSVGElement": {
                    "attributes": ["width=\"1em\"", "height=\"1em\""]
                  }
                }
              ]
            }
          }
        },
        {
          "name": "name-assets-files-by-pattern",
          "options": {
            "pattern": "{{name}}.{{format}}"
          }
        }
      ]
    }
  ]
}
