{
  "repository": "@specifyapp/lucho-test",
  "rules": [
    {
      "name": "Icons",
      "path": "packages/icons/src/",
      "filter": {
        "types": ["vector"]
      },
      "parsers": [
        {
          "name": "pascalcasify",
          "options": {
            "keys": ["name"]
          }
        },
        {
          "name": "svgo",
          "options": {
            "svgo": {
              "plugins": [
                {
                  "removeDimensions": true
                },
                {
                  "removeAttrs": {
                    "attrs": "*:(fill|stroke)"
                  }
                },
                {
                  "addAttributesToSVGElement": {
                    "attributes": ["width=\"1em\"", "height=\"1em\""]
                  }
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
