{
  "repository": "@specifyapp/Specify-Demo",
  "personalAccessToken": "ab1c53eddd356a1e56cacfdc720523608de891fb39d4c03ac5efce519b77e2bb",
  "rules": [
    {
      "name": "Design Tokens / Colors",
      "path": "assets/style/colors.css",
      "filter": {
        "types": ["color"]
      },
      "parsers": [
        {
          "name": "kebabcasify",
          "options": {
            "keys": ["name"]
          }
        },
        {
          "name": "to-css-custom-properties"
        }
      ]
    },
    {
      "name": "Design Tokens / Icons",
      "path": "assets/icons",
      "filter": {
        "types": ["vector"]
      },
      "parsers": [
        {
          "name": "svgo",
          "options": {
            "svgo": {
              "plugins": [
                {
                  "removeDimensions": true
                },
                {
                  "removeAttrs": {
                    "attrs": "*:(fill|stroke)"
                  }
                },
                {
                  "addAttributesToSVGElement": {
                    "attributes": ["width=\"1em\"", "height=\"1em\""]
                  }
                }
              ]
            }
          }
        }
      ]
    }
  ]
}