{
  "repository": "@specifyapp/Swile-DS",
  "rules": [
    {
      "name": "Design Tokens",
      "path": "tokens/theme.js",
      "filter": {
        "types": ["color", "font", "textStyle", "vector", "measurement"]
      },
      "parsers": [
        {
          "name": "to-jss",
          "options": {
            "formatName": "camelCase",
            "formatTokens":{
              "colorFormat": "rgb",
              "textStyleFormat": "classObject",
              "fontSizeUnit":  "rem"
            },
            "formatConfig": {
              "jssObjectName": "lightTheme",
              "exportDefault": false,
              "tabWidth": 4,
              "singleQuote": true
            }
          }
        }
      ]
    }
  ]
}
