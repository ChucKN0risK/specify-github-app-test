{
  "repository": "@specifyapp/lucho-test",
  "head": "update-design",
  "rules": [
    {
      "name": "Design tokens",
      "path": "packages/core/src/styles/themeFromSpecify.js",
      "filter": {
        "types": [
          "color",
          "shadow",
          "gradient",
          "textStyle"
        ]
      },
      "parsers": [
        {
          "name": "to-tailwind",
          "options": {
            "formatName": "kebabCase",
            "formatTokens": {
              "colorFormat": {
                "format": "hex"
              }
            },
            "formatConfig": {
              "objectName": "customTheme",
              "module": "commonjs",
              "singleQuote": true
            },
            "renameKeys": {
              "backgroundImage": "background-image-{{name}}",
              "borderColor": "border-color-{{name}}",
              "borderOpacity": "border-opacity-{{name}}",
              "borderRadius": "border-radius-{{name}}",
              "borderWidth": "border-width-{{name}}",
              "boxShadow": "box-shadow-{{name}}",
              "colors": "colors-{{name}}",
              "fontFamily": "font-family-{{name}}",
              "fontSize": "font-size-{{name}}",
              "fontWeight": "font-weight-{{name}}",
              "letterSpacing": "letter-spacing-{{name}}",
              "lineHeight": "line-height-{{name}}",
              "opacity": "opacity-{{name}}",
              "spacing": "spacing-{{name}}",
              "textColor": "text-color-{{name}}",
              "textOpacity": "text-opacity-{{name}}",
              "transitionDuration": "transition-duration-{{name}}",
              "zIndex": "z-index-{{name}}"
            }
          }
        }
      ]
    },
    {
      "name": "Icons",
      "path": "packages/icons/src/",
      "filter": {
        "types": [
          "vector"
        ]
      },
      "parsers": [
        {
          "name": "pascalcasify",
          "options": {
            "keys": [
              "name"
            ]
          }
        },
        {
          "name": "svgo",
          "options": {
            "svgo": {
              "plugins": [
                {
                  "removeDimensions": true
                },
                {
                  "removeAttrs": {
                    "attrs": "*:(fill|stroke)"
                  }
                },
                {
                  "addAttributesToSVGElement": {
                    "attributes": [
                      "width=\"1em\"",
                      "height=\"1em\""
                    ]
                  }
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
